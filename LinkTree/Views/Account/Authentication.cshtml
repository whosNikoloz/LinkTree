@{
    Layout = "_Layout";
}
@model AuthenticationViewModel

<link href="~/css/loginform.css" rel="stylesheet" />



<div class="section">
    <div class="container">
        <div class="row full-height justify-content-center">
            <div class="col-12 text-center align-self-center py-5">
                <div class="section pb-5 pt-5 pt-sm-2 text-center">
                    <h6 class="mb-0 pb-3"><span>Log In </span><span>Sign Up</span></h6>
                    <input class="checkbox" type="checkbox" id="reg-log" name="reg-log" />
                    <label for="reg-log"></label>
                    <div class="card-3d-wrap mx-auto">
                        <div class="card-3d-wrapper">
                            <div class="card-front">
                                <div class="center-wrap">
                                    <div class="section text-center">
                                        <h4 class="mb-4 pb-3" style="color: white;">Log In</h4>
                                        <form method="post" asp-controller="Account" asp-action="SingIn">
                                            <div class="form-group">
                                                <input type="email" asp-for="userLogin.Email" class="form-style" placeholder="Your Email" autocomplete="off">
                                                <i class="input-icon fa fa-envelope"></i>
                                            </div>
                                            <div class="form-group mt-2">
                                                <input type="password" asp-for="userLogin.Password" class="form-style" placeholder="Your Password"  autocomplete="off">
                                                <i class="input-icon fa fa-unlock"></i>
                                            </div>
                                            <button type="submit" class="btn mt-4">Submit</button>
                                        </form>
                                        <p class="mb-0 mt-4 text-center"><a href="#" class="link">Forgot your password?</a></p>
                                    </div>
                                </div>
                            </div>
                            <div class="card-back">
                                <div class="center-wrap">
                                    <div class="section text-center">
                                        <h4 class="mb-4 pb-3" style="color: white;">Sign Up</h4>
                                        <form  method="post" asp-controller="Account" asp-action="SignUp">
                                            <div class="form-group">
                                                <input type="text" asp-for="userRegister.UserName"  class="form-style" placeholder="Your Full Name"  autocomplete="off">
                                                <i class="input-icon fa fa-user"></i>
                                            </div>
                                            <div class="form-group mt-2">
                                                <input type="email" asp-for="userRegister.Email"  class="form-style" placeholder="Your Email"  autocomplete="off">
                                                <i class="input-icon fa fa-envelope"></i>
                                            </div>
                                            <div class="form-group mt-2">
                                                <input type="number" asp-for="userRegister.PhoneNumber" class="form-style" placeholder="Your Password" autocomplete="off">
                                                <i class="input-icon fa fa fa-unlock"></i>
                                            </div>
                                            <div class="form-group mt-2">
                                                <input type="password" asp-for="userRegister.Password"  class="form-style" placeholder="Your Password"  autocomplete="off">
                                                <i class="input-icon fa fa fa-unlock"></i>
                                            </div>
                                            <div class="form-group mt-2">
                                                <input type="password" asp-for="userRegister.ConfirmPassword"  class="form-style" placeholder="Your Password" autocomplete="off">
                                                <i class="input-icon fa fa fa-unlock"></i>
                                            </div>
                                            <button type="submit" class="btn mt-4">Submit</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


